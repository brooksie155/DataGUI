<?php

class Helper_Reporo extends Helper_Abstract
{
  
  /**
   *  @var String $_apiKey
   */
  private $_apiKey        = 'XxYSod34giBbFsjo3oqEjhbdAMsUrK';
  
  /**
   *  @var String $_sharedSecret
   */
  private $_sharedSecret  = 'JS4CSTVxaKo8tJBKuB6psGHiptioOeveJo7MtFOr5mvgltGjonnXtkX2vB5U';
  
  /**
   * @var string
   */
  protected $gatewayUrl = 'http://www.reporo.com/analytics/data-api.php';


  /**
   * get headers for connecting to Reporo
   *
   * @author Stephen Brooks
   * @return array
   */
  public function getHeaders()
  {
    $epoch      = time();
    
    $signature  = hash('sha256',$epoch.$this->_sharedSecret);
    
    return array(
      'x-reporo-epoch'  => $epoch,
      'x-reporo-key'    => $this->_apiKey,
      'x-reporo-mash'   => $signature
    );
    
  }
  
  /**
   * setter for geteway url, in this case url is static so we just set it
   *
   * @author Stephen Brooks
   */
  public function setGatewayUrl($url=null)
  {
    
  }
  
  
}